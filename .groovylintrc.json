{
    "extends": "recommended",
    "rules": {
        "CatchException": {
            "enabled": false
        },
        "CompileStatic": {
            "enabled": false
        },
        "DuplicateStringLiteral": {
            "enabled": false
        },
        "ImplicitClosureParameter": {
            "enabled": false
        },
        "ImplicitReturnStatement": {
            "enabled": false
        },
        "LineLength": {
            "enabled": false
        },
        "MethodName": {
            "enabled": false
        },
        "MethodParameterTypeRequired": {
            "enabled": false
        },
        "MethodReturnTypeRequired": {
            "enabled": false
        },
        "MethodSize": {
            "enabled": false
        },
        "NestedBlockDepth": {
            "enabled": false
        },
        "NoDef": {
            "enabled": false
        },
        "PublicMethodsBeforeNonPublicMethods": {
            "enabled": false
        },
        "UnnecessaryDefInMethodDeclaration": {
            "enabled": false
        },
        "UnnecessaryGetter": {
            "enabled": false
        },
        "VariableTypeRequired": {
            "enabled": false
        }
    }
}